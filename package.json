{
	"name": "elysia-scoped-state",
	"version": "0.1.0",
	"description": "A state management library for Elysia, scoped to individual users.",
	"repository": {
		"type": "git",
		"url": "https://github.com/alexkahndev/scoped-state.git"
	},
	"main": "./dist/index.js",
	"types": "./dist/src/index.d.ts",
	"license": "CC BY-NC 4.0",
	"author": "Alex Kahn",
	"scripts": {
		"build": "rm -rf dist && bun build src/index.ts --outdir dist --target=bun --external react --external react-dom --external elysia && tsc --emitDeclarationOnly --project tsconfig.json",
		"test": "echo \"Error: no test specified\" && exit 1",
		"format": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,json,mjs,md}\"",
		"dev": "bun run --watch --no-clear-screen example/server.ts",
		"lint": "eslint ./src ./example ./eslint.config.mjs",
		"typecheck": "bun run tsc --noEmit",
		"release": "bun run format && bun run build && bun publish"
	},
	"devDependencies": {
		"@elysiajs/static": "1.2.0",
		"@stylistic/eslint-plugin-ts": "4.2.0",
		"@types/bun": "latest",
		"@types/react": "19.1.3",
		"@types/react-dom": "19.1.3",
		"elysia": "1.3.5",
		"eslint": "9.26.0",
		"eslint-plugin-absolute": "0.0.3",
		"eslint-plugin-import": "2.31.0",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-promise": "7.2.1",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-compiler": "19.1.0-rc.1",
		"eslint-plugin-react-hooks": "5.2.0",
		"eslint-plugin-security": "3.0.1",
		"prettier": "3.5.3",
		"react": "19.1.0",
		"typescript": "5.8.3",
		"typescript-eslint": "8.32.0"
	}
}